<div class="container">
	<center class="img-circle"><img class="img-circle"><%= gravatar_large_for @user %></img>
	<h1 class="center brand-heading"><%= @user.full_name %></h1>
	<h3>Health Portfolio</h3>
	<hr>

		<%= ilink_to 'home icon-3x', current_user, style: 'padding: 20px;', class: "btn btn-default btn-lg" do %><br>Home
		<% end %>
		<%= ilink_to 'group icon-3x', current_user, style: 'padding: 20px;', class: "btn btn-default btn-lg" do %><br>Network
		<% end %>
		<%= ilink_to 'bolt icon-3x', user_events_path(@user), style: 'padding: 20px;', class: "btn btn-default btn-lg" do %><br>Activity
		<% end %>
		<%= ilink_to 'medkit icon-3x', user_medications_path(@user), style: 'padding: 20px;', class: "btn btn-default btn-lg" do %><br>Medications
		<% end %>
		<%= ilink_to 'tasks icon-3x', current_user, style: 'padding: 20px;', class: "btn btn-default btn-lg" do %><br>Tests
		<% end %>
